@page "{id:int}"
@model WebApp.Pages.Models.EditModel
@{
    ViewData["Title"] = "Edit Model";
}

<div class="container">
    <h1>Edit Model</h1>

    <form method="post">
        <input type="hidden" asp-for="Model.ModelID" />
        <input type="hidden" asp-for="Model.UserID" />

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Model.ModelName" class="form-label">Model Name</label>
                    <input asp-for="Model.ModelName" class="form-control" />
                    <span asp-validation-for="Model.ModelName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model.FactionID" class="form-label">Faction</label>
                    <select asp-for="Model.FactionID" class="form-select" asp-items="Model.FactionList">
                        <option value="">Select Faction</option>
                    </select>
                    <span asp-validation-for="Model.FactionID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model.StateID" class="form-label">State</label>
                    <select asp-for="Model.StateID" class="form-select">
                        <option value="">Select State</option>
                        @foreach (var state in Model.States)
                        {
                            <option value="@state.StateID">@state.StateName</option>
                        }
                    </select>
                    <span asp-validation-for="Model.StateID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model.ModelQuantity" class="form-label">Quantity</label>
                    <input asp-for="Model.ModelQuantity" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Model.ModelQuantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 