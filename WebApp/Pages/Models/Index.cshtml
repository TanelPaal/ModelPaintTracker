@page
@model WebApp.Pages.Models.IndexModel

@{
    ViewData["Title"] = "Models";
}

<div class="container">
    <h1>Model Collection</h1>
    
    <div class="mb-3">
        <a asp-page="Create" class="btn btn-primary">Add New Model</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Faction</th>
                    <th>State</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Models)
                {
                    <tr>
                        <td>@item.ModelName</td>
                        @if (item.Faction != null)
                        {
                            <td>@item.Faction.FactionName</td>
                        }
                        @if (item.State != null)
                        {
                            <td>@item.State.StateName</td>
                        }
                        <td>@item.ModelQuantity</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ModelID" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.ModelID" class="btn btn-sm btn-danger">Delete</a>
                            <a asp-page="/ModelPaints/Index" asp-route-modelId="@item.ModelID" class="btn btn-sm btn-info">Paints</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>