@page
@model WebApp.Pages.Models.IndexModel

@{
    ViewData["Title"] = "Models";
}

<div class="container">
    <h1>Model Collection</h1>
    
    <div class="mb-3">
        <a asp-page="Create" class="btn btn-primary">Add New Model</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Faction</th>
                    <th>State</th>
                    <th>Quantity</th>
                    <th>Paints Used</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var miniature in Model.Models)
                {
                    <tr>
                        <td>@miniature.ModelName</td>
                        <td>@miniature.Faction?.FactionName</td>
                        <td>@miniature.State?.StateName</td>
                        <td>@miniature.ModelQuantity</td>
                        <td>
                            <a asp-page="/ModelPaints/Index" asp-route-modelId="@miniature.ModelID" 
                               class="btn btn-sm btn-info">View Paints</a>
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@miniature.ModelID" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@miniature.ModelID" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>