@page "{id:int}"
@model WebApp.Pages.Models.DeleteModel
@{
    ViewData["Title"] = "Delete Model";
}

<div class="container">
    <h1>Delete Model</h1>

    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this model?</h3>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Model Name</dt>
                <dd class="col-sm-9">@Model.Model.ModelName</dd>

                <dt class="col-sm-3">Faction</dt>
                <dd class="col-sm-9">@Model.Model.Faction?.FactionName</dd>

                <dt class="col-sm-3">State</dt>
                <dd class="col-sm-9">@Model.Model.State?.StateName</dd>

                <dt class="col-sm-3">Quantity</dt>
                <dd class="col-sm-9">@Model.Model.ModelQuantity</dd>
            </dl>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Model.ModelID" />
        <div class="mb-3">
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div> 