@page
@model WebApp.Pages.Models.CreateModel
@{
    ViewData["Title"] = "Add New Model";
}

<div class="container">
    <h1>Add New Model</h1>

    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Model.ModelName" class="form-label">Model Name</label>
                    <input asp-for="Model.ModelName" class="form-control" />
                    <span asp-validation-for="Model.ModelName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model.FactionID" class="form-label">Faction</label>
                    <select asp-for="Model.FactionID" class="form-select" asp-items="Model.FactionList">
                        <option value="">Select Faction</option>
                    </select>
                    <span asp-validation-for="Model.FactionID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model.StateID" class="form-label">State</label>
                    <select asp-for="Model.StateID" class="form-select" asp-items="Model.StateList">
                        <option value="">Select State</option>
                    </select>
                    <span asp-validation-for="Model.StateID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model.ModelQuantity" class="form-label">Quantity</label>
                    <input asp-for="Model.ModelQuantity" type="number" class="form-control" min="0" value="1" />
                    <span asp-validation-for="Model.ModelQuantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 